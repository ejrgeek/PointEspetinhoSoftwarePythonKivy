#####     TELA PRINCIPAL    #####
<Principal>:
    Screen:
        #: import hex kivy.utils.get_color_from_hex
        name: "Entrada"
        orientation: "vertical"
        FloatLayout:
            Image: #Fundo legal
                source: "img/fundo.jpg"
                opacity: .5

            Label:
                text: "ENTRADA"
                font_size: 30
                size_hint: 0, .2
                pos_hint: {"center_x":.5, "center_y":.9}
                color: hex("#4c2406")
                bold: True

            TextInput:
                font_size: 25
                size_hint: .8, .1
                pos_hint: {"center_x": .5, "center_y": .65}
                multiline: False
                hint_text: "Usuario"
                padding_y: 15
                padding_x: 10
                write_tab: False
                multiline: False
                input_filter: None
                id: user

            TextInput:
                font_size: 25
                size_hint: .8, .1
                pos_hint: {"center_x": .5, "center_y": .54}
                hint_text: "Senha"
                padding_y: 15
                padding_x: 10
                write_tab: False
                multiline: False
                password: True
                input_filter: None
                id: senha

            Button:
                text: "LOGIN"
                color: hex("#e9e9bb")
                bold: True
                font_size: 25
                size_hint: .8, .1
                pos_hint: {"center_x": .5, "center_y": .43}
                background_color: hex("#4c2406")
                background_normal: ""
                id: botaoLogin
                on_press: root.click_login()

            ActionBar:
                ActionView:
                    ActionPrevious:
                        on_press: app.stop()
                        title: "Sair"
                        background_color: hex("#4c2406")

                    ActionButton:
                        icon: "img/suporte.png"
                        title: "Suporte"
                        on_press: app.root.current = "suporte"
                    ActionSeparator:
                    ActionButton:
                        icon: "img/info.png"
                        title: "Sobre"
                        on_press: app.root.current = "info"


    AdmApp:
        name: 'Adm'
    ###############
    PedidoGerenciadorApp:
        name: 'PedidoGerenciador'
    ###############
    FazerPedidoApp:
        name: 'Fazer_Pedido'
    PedidoAltDelApp:
        name: "PedidoAltDel"
    #################
    Suporte:
        name: 'suporte'
    Info:
        name: 'info'

