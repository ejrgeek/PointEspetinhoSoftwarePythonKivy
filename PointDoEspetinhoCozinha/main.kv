            on_press: root.ver_pedidos()

        TextInput:
            font_size: 20
            size_hint: .79, .6
            pos_hint: {'center_y':.45, 'center_x': .5}
            text: "PEDIDOS"
            multiline: True
            readonly: True
            id: cardPedidos

        ActionBar:

            ActionView:
                ActionPrevious:
                    on_press: app.root.current = "Cozinha"
